
    {{!-- Trabajando con handenlbars para hacer un each --}}


{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Titles</th>
            <th>description</th>
            <th>Operations</th>
        </tr>
    </thead>

    <tbody>

    {{#each tasks}}

    <tr>
        {{!-- El index es el del each woooow --}}
        <td>{{@index}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>
            {{!-- done o undone segun el caso papu --}}
            
            {{#if done}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Undone</a>
            {{else}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Done</a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
        </td>
    </tr>


    {{/each}}



    </tbody>

</table>
    {{else}}
<div class="h-100 d-flex align-items-center justify-content-center text-white">

    <div class="text-center">
        <h1>No Tasks</h1>
        <img src="./icons/vacio.png" alt="" class="w-75">
    </div>
</div>

{{/if}}
